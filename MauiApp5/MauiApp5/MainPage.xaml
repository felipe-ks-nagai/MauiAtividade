<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.MainPage"
             BackgroundColor="#103f76"
             Shell.BackgroundColor="#0d2746"
             Shell.TitleColor="White">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label 
                Text="Bem-vindo a lista de jogos, aqui você encontrará qualquer gênero de jogo!"
                FontSize="30"
                HorizontalTextAlignment="Center" 
                TextColor="White"/>
            <Button 
                Background="#3b3534"
                Text="Abrir lista de produto"
                x:Name="btnProdutoLista"
                Clicked="btnProdutoLista_Clicked"
                WidthRequest="200"
                BorderColor="#2c2928"
                BorderWidth="6"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
