<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp5"
             x:Class="MauiApp5.ProductPage"
             BindingContext="{x:Reference Produto}"
             Title="ProductPage">
    <HorizontalStackLayout Padding="15">
        <VerticalStackLayout>
            <Image Source="{Binding Imagem}" 
                   HeightRequest="400"/>
        </VerticalStackLayout>
        <VerticalStackLayout Padding="20">
            <Label Text="{Binding Nome, StringFormat='Nome: {0}'}"
                   FontSize="Title"
                   FontAttributes="Bold"/>
            <Label Text="{Binding Preco, StringFormat='Preço: {0:F2}'}"
                   FontSize="Subtitle"
                   TextColor="Green" />
            <Label Text="{Binding Data, StringFormat='Data de lançamento: {0}'}" FontSize="Subtitle"/>
            <Label Text="{Binding Empresa, StringFormat='Empresa desenvolvedora: {0}'}" FontSize="Subtitle"/>
            <Label Text="{Binding Descricao}" />
        </VerticalStackLayout>
    </HorizontalStackLayout>
